<html>
  <head>
    <title>My Mediacenter</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

    <script src="js/angularApp.js"></script>

    <script src="js/jquery.min.js"></script>
    <script src="js/jquery.scrolly.min.js"></script>
    <script src="js/skel.min.js"></script>
    <script src="js/init.js"></script>
    <noscript>
      <link rel="stylesheet" href="css/skel.css" />
      <link rel="stylesheet" href="css/style.css" />
      <link rel="stylesheet" href="css/style-desktop.css" />
    </noscript>
    <!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
    <!--[if lte IE 9]><link rel="stylesheet" href="css/ie/v9.css" /><![endif]-->

  </head>
  <body ng-app="mediacenter">
    <nav id="nav">
      <ul class="container">
        <li><a href="#/movies">Movies</a></li>
        <!--<li><a href="/update">Update</a></li>-->
      </ul>
    </nav>
    <ui-view></ui-view>

    <script type="text/ng-template" id="/movies.html">
      <div class="wrapper style">
        <article>
          <div class="container">
          <div class="row">
            <div class="2u" ng-repeat="movie in movies | orderBy:'title'">
            <article class="box style" >
              <a href="#/movies/{{movie._id}}" class="image featured"><img ng-src="{{movie.thumb}}" /></a>
              <b><a href="#/movies/{{movie._id}}">{{movie.title}}</a></b>
            </article>
            </div>
            </div>
          </div>
        </article>
      </div>
    </script>

    <script type="text/ng-template" id="/movie.html">
     <div class="wrapper style1 first">
        <article class="container">
          <header>
              <h1>{{movie.title}}</h1>
          </header>
          <div class="row">
            <div class="12u">
              <video ng-src="{{movie.path}}" width="1080" height="720" controls>
              </video>
            </div>
          </div>
        </article>
      </div>
    </script>

  </body>
</html>